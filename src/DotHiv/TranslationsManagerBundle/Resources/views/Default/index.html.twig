                                </ul>
                            </div>
                            <div ng-show="csverrors.length == 0 && file">
                                <div class="alert alert-success">Looks nice. You're good to go.</div>
{#                                 <input type="text" ng-bind="msg" placeholder="A short description of your changes.">#}
{#                                 <a href="#" ng-click="diff()" role="button" class="btn btn-success" ng-enabled="errors.length == 0">Get diff</a>#}
